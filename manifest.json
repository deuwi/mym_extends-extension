{
  "manifest_version": 3,
  "name": "MYM Chat Live",
  "version": "2.0.3",
  "description": "Extension pour créateurs MYM.fans - Chat Live amélioré, Badges revenus, Emoji Picker, Notes. Essai gratuit 7 jours.",
  "permissions": ["storage", "alarms"],
  "host_permissions": [
    "https://creators.mym.fans/*",
    "https://mym.fans/*",
    "https://mymchat.fr/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-disconnected-16.png",
      "48": "icons/icon-disconnected-48.png",
      "128": "icons/icon-disconnected-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["detector.js"],
      "matches": ["https://creators.mym.fans/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://creators.mym.fans/app/chat/*",
        "https://creators.mym.fans/app/myms*",
        "https://creators.mym.fans/app/account/my-followers*"
      ],
      "js": [
        "config.js",
        "modules/core.js",
        "modules/api.js",
        "modules/badges.js",
        "modules/emoji.js",
        "modules/notes.js",
        "modules/stats.js",
        "modules/conversations-list.js",
        "modules/myms-clickable-rows.js",
        "modules/keyboard-shortcuts.js",
        "modules/auto-polling.js",
        "modules/sidebar-toggle.js",
        "content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://mymchat.fr/*signin*",
        "https://mymchat.fr/*login*"
      ],
      "js": ["config.js", "auth-bridge.js"],
      "run_at": "document_idle"
    }
  ]
}
