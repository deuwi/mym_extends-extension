{
  "manifest_version": 2,
  "name": "MYM Chat Live",
  "version": "1.2.12",
  "description": "Extension pour créateurs MYM.fans - Chat Live amélioré, Badges revenus, Emoji Picker, Notes. Essai gratuit 7 jours.",
  "permissions": [
    "storage",
    "alarms",
    "https://creators.mym.fans/*",
    "https://mym-extends-frontend.pages.dev/*",
    "https://mymchat.fr/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "mym-chat-live@mymchat.fr",
      "strict_min_version": "109.0"
    }
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["config.js", "background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["detector.js"],
  "content_scripts": [
    {
      "matches": [
        "https://creators.mym.fans/app/chat/*",
        "https://creators.mym.fans/app/myms*",
        "https://creators.mym.fans/app/account/my-followers*"
      ],
      "js": ["config.js", "content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://mym-extends-frontend.pages.dev/*signin*",
        "https://mym-extends-frontend.pages.dev/*login*"
      ],
      "js": ["config.js", "auth-bridge.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://mymchat.fr/*signin*", "https://mymchat.fr/*login*"],
      "js": ["config.js", "auth-bridge.js"],
      "run_at": "document_idle"
    }
  ]
}
