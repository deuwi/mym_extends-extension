{
  "name": "mym-chat-live-extension",
  "version": "2.0.2",
  "description": "Extension for MYM.fans creators - Enhanced chat, revenue badges, emoji picker, notes, and more",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js modules/*.js",
    "lint:fix": "eslint --fix *.js modules/*.js",
    "lint:logs": "node scripts/migrate-logs.js --verify",
    "migrate:logs:preview": "node scripts/migrate-logs.js --dry-run",
    "migrate:logs:apply": "node scripts/migrate-logs.js --apply",
    "build:chrome": "powershell -ExecutionPolicy Bypass -File build-chrome.ps1",
    "build:firefox": "powershell -ExecutionPolicy Bypass -File build-firefox.ps1",
    "build": "npm run build:chrome && npm run build:firefox",
    "prebuild": "npm run lint:check",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "keywords": [
    "chrome-extension",
    "firefox-addon",
    "mym",
    "creators",
    "chat",
    "productivity"
  ],
  "author": "MYM Chat Live",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "terser": "^5.24.0"
  },
  "dependencies": {
    "terser": "^5.24.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "modules/*.js",
      "!minify.js",
      "!browser-polyfill.js",
      "!detector.js",
      "!build-*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 80
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "globals": {
      "chrome": "readonly",
      "browser": "readonly",
      "APP_CONFIG": "readonly",
      "debugLog": "readonly"
    },
    "rules": {
      "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
      "no-console": ["warn", { "allow": ["error", "warn"] }],
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}
